<Window x:Class="TetrisClient.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisClient"
        mc:Ignorable="d"
        Title="StartupWindow" Height="450" Width="800">
    <Grid x:Name="StartupGrid" Background="Yellow">
        <TextBox TextWrapping="Wrap" TextAlignment="Center" Text="Welcome to Tetris!&#xD;&#xA;Please select your gamemode.&#xD;&#xA;" Margin="300,123,300,241"/>
        <Button x:Name="SingleplayerButton" Click="SingleplayerButton_Click" Content="Singleplayer" Margin="344,198,344,176"/>
        <Button x:Name="MultiplayerButton" Click="MultiplayerButton_Click" Content="Multiplayer" Margin="344,283,344,88"/>

    </Grid>
</Window>
